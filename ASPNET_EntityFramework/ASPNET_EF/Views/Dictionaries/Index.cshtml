@model IEnumerable<ASPNET_EF.Models.Dictionaries>

@{
    ViewData["Title"] = "Index";
    int i = 0;
}

<h1>Index</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">Stwórz nowy słownik</a>
</p>

<div class="container">
    @foreach (var item in Model)
    {
        @if (i % 3 == 0)
        {
            @:<div class='card-group mb-4 row'>
        }

        <div class="col-md-4">
            <div class="card mx-auto " style="width: 100%;">
                <div class="card-body">
                    <h5 class="card-title">@item.DictionaryName</h5>
                    <p class="card-text">
                        Poziom: @item.DictionaryLevelValues.DictionaryLevel <br />Ilość słów: @item.Words.Count
                    </p>
                    <p class="card-text">
                    </p>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edytuj</a>
			        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Usuń</a>
                </div>
            </div>
        </div>

        @if ((i + 1) % 3 == 0)
        {
            @:</div>
        }

        i++;
    }

    @if (i % 3 != 0)
    {
        @:</div>
    }
</div>