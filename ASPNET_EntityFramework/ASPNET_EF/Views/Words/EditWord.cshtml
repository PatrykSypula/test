@model ASPNET_EF.Models.Words

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Words</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditWord">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="WordPolish" class="control-label"></label>
                <input asp-for="WordPolish" class="form-control" />
                <span asp-validation-for="WordPolish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WordTranslated" class="control-label"></label>
                <input asp-for="WordTranslated" class="form-control" />
                <span asp-validation-for="WordTranslated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DictionaryId" class="control-label"></label>
                <select asp-for="DictionaryId" class="form-control" asp-items="ViewBag.DictionaryId"></select>
                <span asp-validation-for="DictionaryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
